<% content_for :title, "Brand Vision - #{@brand.name}" %>

<header class="bg-white border-b border-gray-200 px-8 py-6">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-semibold text-gray-900">Brand Strategy & Messaging</h1>
      <p class="text-gray-600 mt-1">Define your brand's core purpose, values, and messaging framework</p>
    </div>
    <div class="flex items-center space-x-4">
      <%= render "shared/save_indicator" %>
      <button class="bg-black hover:bg-gray-800 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors">
        <i class="fa-solid fa-magic-wand-sparkles mr-2"></i>
        AI Assistant
      </button>
    </div>
  </div>
</header>

<div class="p-8">
  <%= render "shared/section_progress", presenter: @vision_presenter %>

  <div class="space-y-8">
    <div class="bg-white border border-gray-200 rounded-xl p-8">
      <div class="flex items-center justify-between mb-6">
        <div class="flex items-center space-x-3">
          <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
            <i class="fa-solid fa-check text-green-600"></i>
          </div>
          <div>
            <h3 class="text-xl font-semibold text-gray-900">Brand Name</h3>
            <p class="text-gray-600 text-sm">Your brand's identity starts here</p>
          </div>
        </div>
      </div>
      <div class="bg-gray-50 rounded-lg p-6">
        <div class="flex items-center justify-between">
          <div>
            <h4 class="text-2xl font-bold text-gray-900"><%= @brand.name %></h4>
            <% if @brand.is_working_name? %>
              <p class="text-gray-600 mt-1">AI-generated working name</p>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <%= form_with model: @brand_vision, url: brand_vision_path(@brand), method: :patch, data: { turbo: true, controller: "autosave", autosave_target: "form" } do |f| %>
      <div class="bg-white border border-gray-200 rounded-xl p-8">
        <div class="flex items-center justify-between mb-6">
          <div class="flex items-center space-x-3">
            <div class="w-10 h-10 bg-gray-200 rounded-lg flex items-center justify-center">
              <i class="fa-solid fa-bullseye text-gray-400"></i>
            </div>
            <div>
              <h3 class="text-xl font-semibold text-gray-900">Mission Statement</h3>
              <p class="text-gray-600 text-sm">Why your brand exists and what it aims to accomplish</p>
            </div>
          </div>
          <button type="button" class="bg-black text-white px-4 py-2 rounded-lg text-sm hover:bg-gray-800 transition-colors">
            <i class="fa-solid fa-magic-wand-sparkles mr-2"></i>
            AI Help
          </button>
        </div>
        <div class="space-y-4">
          <%= f.text_area :mission_statement,
                          class: "w-full h-32 p-4 border border-gray-300 rounded-lg resize-none focus:ring-2 focus:ring-black focus:border-transparent",
                          placeholder: "Describe your brand's purpose and what it aims to achieve in the world...",
                          data: { action: "input->autosave#save" } %>
          <div class="flex items-center justify-between">
            <%= render "shared/save_indicator" %>
            <button type="button" class="bg-gray-100 hover:bg-gray-200 text-gray-700 px-4 py-2 rounded-lg text-sm">
              Get Examples
            </button>
          </div>
        </div>
      </div>
    <% end %>

    <%= form_with model: @brand_vision, url: brand_vision_path(@brand), method: :patch, data: { turbo: true, controller: "autosave", autosave_target: "form" } do |f| %>
      <div class="bg-white border border-gray-200 rounded-xl p-8">
        <div class="flex items-center justify-between mb-6">
          <div class="flex items-center space-x-3">
            <div class="w-10 h-10 bg-gray-200 rounded-lg flex items-center justify-center">
              <i class="fa-solid fa-eye text-gray-400"></i>
            </div>
            <div>
              <h3 class="text-xl font-semibold text-gray-900">Vision Statement</h3>
              <p class="text-gray-600 text-sm">Your brand's aspirational future and long-term goals</p>
            </div>
          </div>
          <button type="button" class="bg-black text-white px-4 py-2 rounded-lg text-sm hover:bg-gray-800 transition-colors">
            <i class="fa-solid fa-magic-wand-sparkles mr-2"></i>
            AI Help
          </button>
        </div>
        <div class="space-y-4">
          <%= f.text_area :vision_statement,
                          class: "w-full h-32 p-4 border border-gray-300 rounded-lg resize-none focus:ring-2 focus:ring-black focus:border-transparent",
                          placeholder: "Paint a picture of the future your brand is working towards...",
                          data: { action: "input->autosave#save" } %>
        </div>
      </div>
    <% end %>

    <div class="bg-white border border-gray-200 rounded-xl p-8">
      <div class="flex items-center justify-between mb-6">
        <div class="flex items-center space-x-3">
          <div class="w-10 h-10 bg-gray-200 rounded-lg flex items-center justify-center">
            <i class="fa-solid fa-heart text-gray-400"></i>
          </div>
          <div>
            <h3 class="text-xl font-semibold text-gray-900">Core Values</h3>
            <p class="text-gray-600 text-sm">The fundamental beliefs that guide your brand</p>
          </div>
        </div>
        <button type="button" class="bg-black text-white px-4 py-2 rounded-lg text-sm hover:bg-gray-800 transition-colors">
          <i class="fa-solid fa-magic-wand-sparkles mr-2"></i>
          AI Help
        </button>
      </div>
      <div class="space-y-4" id="core_values_section">
        <%= render "core_values", brand_vision: @brand_vision, brand: @brand %>
      </div>
    </div>

    <%= form_with model: @brand_vision, url: brand_vision_path(@brand), method: :patch, data: { turbo: true, controller: "autosave", autosave_target: "form" } do |f| %>
      <div class="bg-white border border-gray-200 rounded-xl p-8">
        <div class="flex items-center justify-between mb-6">
          <div class="flex items-center space-x-3">
            <div class="w-10 h-10 bg-gray-200 rounded-lg flex items-center justify-center">
              <i class="fa-solid fa-users text-gray-400"></i>
            </div>
            <div>
              <h3 class="text-xl font-semibold text-gray-900">Brand Personality</h3>
              <p class="text-gray-600 text-sm">Traits and tone that define your brand's character</p>
            </div>
          </div>
          <button type="button" class="bg-black text-white px-4 py-2 rounded-lg text-sm hover:bg-gray-800 transition-colors">
            <i class="fa-solid fa-magic-wand-sparkles mr-2"></i>
            AI Help
          </button>
        </div>
        <div class="space-y-6">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Traits</label>
            <p class="text-sm text-gray-500 mb-3">Enter personality traits (e.g., innovative, approachable, professional)</p>
            <div class="space-y-2" data-controller="tag-input">
              <input type="text"
                     data-tag-input-target="input"
                     data-action="keydown.enter->tag-input#addTag:prevent"
                     class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-black focus:border-transparent"
                     placeholder="Type a trait and press Enter...">
              <div id="traits-container" class="flex flex-wrap gap-2" data-tag-input-target="container">
                <% traits = @brand_vision.brand_personality&.dig("traits") || [] %>
                <% traits.each do |trait| %>
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-gray-100 text-gray-800">
                    <%= trait %>
                    <button type="button" class="ml-2 text-gray-500 hover:text-gray-700" data-action="click->tag-input#removeTag">×</button>
                  </span>
                <% end %>
              </div>
              <% traits.each_with_index do |trait, index| %>
                <%= f.hidden_field "brand_personality[traits][]", value: trait, data: { tag_input_target: "hiddenField" } %>
              <% end %>
            </div>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Tone</label>
            <p class="text-sm text-gray-500 mb-3">Enter tone descriptors (e.g., confident, friendly, authoritative)</p>
            <div class="space-y-2" data-controller="tag-input">
              <input type="text"
                     data-tag-input-target="input"
                     data-action="keydown.enter->tag-input#addTag:prevent"
                     class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-black focus:border-transparent"
                     placeholder="Type a tone and press Enter...">
              <div id="tone-container" class="flex flex-wrap gap-2" data-tag-input-target="container">
                <% tone = @brand_vision.brand_personality&.dig("tone") || [] %>
                <% tone.each do |tone_item| %>
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-gray-100 text-gray-800">
                    <%= tone_item %>
                    <button type="button" class="ml-2 text-gray-500 hover:text-gray-700" data-action="click->tag-input#removeTag">×</button>
                  </span>
                <% end %>
              </div>
              <% tone.each_with_index do |tone_item, index| %>
                <%= f.hidden_field "brand_personality[tone][]", value: tone_item, data: { tag_input_target: "hiddenField" } %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <%= form_with model: @brand_vision, url: brand_vision_path(@brand), method: :patch, data: { turbo: true, controller: "autosave", autosave_target: "form" } do |f| %>
      <div class="bg-white border border-gray-200 rounded-xl p-8">
        <div class="flex items-center justify-between mb-6">
          <div class="flex items-center space-x-3">
            <div class="w-10 h-10 bg-gray-200 rounded-lg flex items-center justify-center">
              <i class="fa-solid fa-tag text-gray-400"></i>
            </div>
            <div>
              <h3 class="text-xl font-semibold text-gray-900">Category</h3>
              <p class="text-gray-600 text-sm">Your brand's industry or business category</p>
            </div>
          </div>
        </div>
        <div class="space-y-4">
          <%= f.select :category,
                       options_for_select([
                         ["Select a category...", ""],
                         ["SaaS", "SaaS"],
                         ["E-commerce", "E-commerce"],
                         ["Fintech", "Fintech"],
                         ["Healthcare", "Healthcare"],
                         ["Education", "Education"],
                         ["Food & Beverage", "Food & Beverage"],
                         ["Fashion & Apparel", "Fashion & Apparel"],
                         ["Technology", "Technology"],
                         ["Consulting", "Consulting"],
                         ["Non-profit", "Non-profit"],
                         ["Other", "Other"]
                       ], @brand_vision.category),
                       {},
                       class: "w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-black focus:border-transparent",
                       data: { action: "change->autosave#save" } %>
        </div>
      </div>
    <% end %>

    <%= form_with model: @brand_vision, url: brand_vision_path(@brand), method: :patch, data: { turbo: true, controller: "autosave", autosave_target: "form" } do |f| %>
      <div class="bg-white border border-gray-200 rounded-xl p-8">
        <div class="flex items-center justify-between mb-6">
          <div class="flex items-center space-x-3">
            <div class="w-10 h-10 bg-gray-200 rounded-lg flex items-center justify-center">
              <i class="fa-solid fa-globe text-gray-400"></i>
            </div>
            <div>
              <h3 class="text-xl font-semibold text-gray-900">Target Markets</h3>
              <p class="text-gray-600 text-sm">Geographic markets where your brand operates</p>
            </div>
          </div>
        </div>
        <div class="space-y-4">
          <div class="space-y-2" data-controller="tag-input">
            <input type="text"
                   data-tag-input-target="input"
                   data-action="keydown.enter->tag-input#addTag:prevent"
                   class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-black focus:border-transparent"
                   placeholder="Type a market (e.g., US, UK, EU) and press Enter...">
            <div id="markets-container" class="flex flex-wrap gap-2" data-tag-input-target="container">
              <% markets = @brand_vision.markets || [] %>
              <% markets.each do |market| %>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-gray-100 text-gray-800">
                  <%= market %>
                  <button type="button" class="ml-2 text-gray-500 hover:text-gray-700" data-action="click->tag-input#removeTag">×</button>
                </span>
              <% end %>
            </div>
            <% markets.each_with_index do |market, index| %>
              <%= f.hidden_field "markets[]", value: market, data: { tag_input_target: "hiddenField" } %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
