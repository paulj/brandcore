                  <button type="button" class="ml-2 text-gray-500 hover:text-gray-700" data-action="click->tag-input#removeTag">×</button>
                </span>
              <% end %>
            </div>
            <% keywords.each_with_index do |keyword, index| %>
              <%= f.hidden_field "keywords[]", value: keyword, data: { tag_input_target: "hiddenField" } %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Mission Statement Examples Dialog -->
  <div class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4"
       data-examples-dialog-target="modal"
       data-action="click->examples-dialog#closeModal">
    <div class="bg-white rounded-xl shadow-xl max-w-3xl w-full max-h-[90vh] overflow-hidden flex flex-col"
         onclick="event.stopPropagation()">
      <!-- Modal Header -->
      <div class="flex items-center justify-between p-6 border-b border-gray-200">
        <div>
          <h3 class="text-xl font-semibold text-gray-900">Mission Statement Examples</h3>
          <p class="text-sm text-gray-600 mt-1">Inspiration from well-known brands</p>
        </div>
        <button type="button"
                class="text-gray-400 hover:text-gray-600"
                data-action="click->examples-dialog#closeModal">
          <i class="fa-solid fa-times text-xl"></i>
        </button>
      </div>

