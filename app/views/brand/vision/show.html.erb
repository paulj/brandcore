<% content_for :title, "Brand Vision - #{@brand.name}" %>

<%= turbo_stream_from "brand_properties_#{@brand.id}" %>

<header class="bg-white border-b border-gray-200 px-8 py-6">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-semibold text-gray-900">Brand Strategy & Messaging</h1>
      <p class="text-gray-600 mt-1">Define your brand's core purpose, values, and messaging framework</p>
    </div>
    <div class="flex items-center space-x-4">
      <%= render "shared/save_indicator" %>
    </div>
  </div>
</header>

<div class="p-8">
  <div class="space-y-8">
    <%# Brand Name Display (Read-only) %>
    <div class="bg-white border border-gray-200 rounded-xl p-8">
      <div class="flex items-center justify-between mb-6">
        <div class="flex items-center space-x-3">
          <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
            <i class="fa-solid fa-check text-green-600"></i>
          </div>
          <div>
            <h3 class="text-xl font-semibold text-gray-900">Brand Name</h3>
            <p class="text-gray-600 text-sm">Your brand's identity starts here</p>
          </div>
        </div>
      </div>
      <div class="bg-gray-50 rounded-lg p-6">
        <div class="flex items-center justify-between">
          <div>
            <h4 class="text-2xl font-bold text-gray-900"><%= @brand.name %></h4>
            <% if @brand.is_working_name? %>
              <p class="text-gray-600 mt-1">AI-generated working name</p>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <%# Category %>
    <%= render "brand/properties/property_card", brand: @brand, property_name: "category" %>

    <%# Mission Statement %>
    <%= render "brand/properties/property_card", brand: @brand, property_name: "mission" %>

    <%# Vision Statement %>
    <%= render "brand/properties/property_card", brand: @brand, property_name: "vision" %>

    <%# Target Markets %>
    <%= render "brand/properties/property_card", brand: @brand, property_name: "market" %>

    <%# Target Audiences %>
    <%= render "brand/properties/property_card", brand: @brand, property_name: "audience" %>

    <%# Brand Traits %>
    <%= render "brand/properties/property_card", brand: @brand, property_name: "trait" %>

    <%# Brand Tone %>
    <%= render "brand/properties/property_card", brand: @brand, property_name: "tone" %>

    <%# Keywords %>
    <%= render "brand/properties/property_card", brand: @brand, property_name: "keyword" %>
  </div>
</div>
