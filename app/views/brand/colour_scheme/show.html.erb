<% content_for :title, "Colour Scheme - #{@brand.name}" %>

<header class="bg-white border-b border-gray-200 px-8 py-6">
  <div class="flex items-center justify-between">
    <div class="flex items-center space-x-4">
      <%= link_to brand_path(@brand), class: "text-gray-400 hover:text-gray-600" do %>
        <i class="fa-solid fa-arrow-left"></i>
      <% end %>
      <div>
        <h1 class="text-2xl font-semibold text-gray-900">Colour Scheme</h1>
        <p class="text-gray-600 mt-1">Choose your brand's colour palette</p>
      </div>
    </div>
    <div class="flex items-center space-x-4">
      <button class="bg-gray-100 hover:bg-gray-200 text-gray-700 px-4 py-2 rounded-lg text-sm font-medium transition-colors">
        <i class="fa-solid fa-upload mr-2"></i>
        Upload Colours
      </button>
      <button class="bg-black hover:bg-gray-800 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors">
        <i class="fa-solid fa-magic-wand-sparkles mr-2"></i>
        AI Generate
      </button>
    </div>
  </div>
</header>

<div class="p-8">
  <div class="mb-8">
    <h2 class="text-lg font-semibold text-gray-900 mb-4">Current Selection</h2>
    <div class="bg-white border border-gray-200 rounded-xl p-6">
      <div class="flex items-center justify-between mb-4">
        <div>
          <h3 class="text-lg font-medium text-gray-900">Tech Blue</h3>
          <p class="text-sm text-gray-500">Modern and professional palette</p>
        </div>
        <button class="text-sm text-gray-500 hover:text-gray-700">
          <i class="fa-solid fa-edit mr-1"></i>
          Customize
        </button>
      </div>
      <div class="flex space-x-2">
        <div class="flex-1 h-16 bg-blue-600 rounded-lg flex items-end justify-center pb-2">
          <span class="text-white text-xs font-medium">#2563EB</span>
        </div>
        <div class="flex-1 h-16 bg-blue-500 rounded-lg flex items-end justify-center pb-2">
          <span class="text-white text-xs font-medium">#3B82F6</span>
        </div>
        <div class="flex-1 h-16 bg-blue-400 rounded-lg flex items-end justify-center pb-2">
          <span class="text-white text-xs font-medium">#60A5FA</span>
        </div>
        <div class="flex-1 h-16 bg-blue-300 rounded-lg flex items-end justify-center pb-2">
          <span class="text-gray-800 text-xs font-medium">#93C5FD</span>
        </div>
        <div class="flex-1 h-16 bg-blue-100 rounded-lg flex items-end justify-center pb-2">
          <span class="text-gray-800 text-xs font-medium">#DBEAFE</span>
        </div>
      </div>
    </div>
  </div>

  <div class="mb-8">
    <div class="flex space-x-4 mb-6">
      <button class="bg-black text-white px-4 py-2 rounded-lg text-sm font-medium">All Palettes</button>
      <button class="bg-gray-100 text-gray-700 px-4 py-2 rounded-lg text-sm font-medium hover:bg-gray-200 transition-colors">Professional</button>
      <button class="bg-gray-100 text-gray-700 px-4 py-2 rounded-lg text-sm font-medium hover:bg-gray-200 transition-colors">Creative</button>
      <button class="bg-gray-100 text-gray-700 px-4 py-2 rounded-lg text-sm font-medium hover:bg-gray-200 transition-colors">Minimal</button>
      <button class="bg-gray-100 text-gray-700 px-4 py-2 rounded-lg text-sm font-medium hover:bg-gray-200 transition-colors">Bold</button>
    </div>
  </div>

  <div class="grid grid-cols-2 gap-6 mb-12">
    <div class="bg-white border-2 border-blue-200 rounded-xl p-6 cursor-pointer hover:shadow-lg transition-all">
      <div class="flex items-center justify-between mb-4">
        <div>
          <h3 class="text-lg font-medium text-gray-900">Tech Blue</h3>
          <p class="text-sm text-gray-500">Modern and professional</p>
        </div>
        <div class="w-6 h-6 bg-blue-600 rounded-full border-2 border-white shadow-lg"></div>
      </div>
      <div class="flex space-x-1 mb-4">
        <div class="flex-1 h-12 bg-blue-600 rounded"></div>
        <div class="flex-1 h-12 bg-blue-500 rounded"></div>
        <div class="flex-1 h-12 bg-blue-400 rounded"></div>
        <div class="flex-1 h-12 bg-blue-300 rounded"></div>
        <div class="flex-1 h-12 bg-blue-100 rounded"></div>
      </div>
    </div>

    <div class="bg-white border border-gray-200 rounded-xl p-6 cursor-pointer hover:shadow-lg transition-all hover:border-green-200">
      <div class="flex items-center justify-between mb-4">
        <div>
          <h3 class="text-lg font-medium text-gray-900">Forest Green</h3>
          <p class="text-sm text-gray-500">Natural and sustainable</p>
        </div>
        <div class="w-6 h-6 bg-green-600 rounded-full"></div>
      </div>
      <div class="flex space-x-1 mb-4">
        <div class="flex-1 h-12 bg-green-700 rounded"></div>
        <div class="flex-1 h-12 bg-green-600 rounded"></div>
        <div class="flex-1 h-12 bg-green-500 rounded"></div>
        <div class="flex-1 h-12 bg-green-300 rounded"></div>
        <div class="flex-1 h-12 bg-green-100 rounded"></div>
      </div>
    </div>

    <div class="bg-white border border-gray-200 rounded-xl p-6 cursor-pointer hover:shadow-lg transition-all hover:border-orange-200">
      <div class="flex items-center justify-between mb-4">
        <div>
          <h3 class="text-lg font-medium text-gray-900">Sunset Orange</h3>
          <p class="text-sm text-gray-500">Energetic and warm</p>
        </div>
        <div class="w-6 h-6 bg-orange-500 rounded-full"></div>
      </div>
      <div class="flex space-x-1 mb-4">
        <div class="flex-1 h-12 bg-orange-600 rounded"></div>
        <div class="flex-1 h-12 bg-orange-500 rounded"></div>
        <div class="flex-1 h-12 bg-orange-400 rounded"></div>
        <div class="flex-1 h-12 bg-orange-300 rounded"></div>
        <div class="flex-1 h-12 bg-orange-100 rounded"></div>
      </div>
    </div>

    <div class="bg-white border border-gray-200 rounded-xl p-6 cursor-pointer hover:shadow-lg transition-all hover:border-purple-200">
      <div class="flex items-center justify-between mb-4">
        <div>
          <h3 class="text-lg font-medium text-gray-900">Royal Purple</h3>
          <p class="text-sm text-gray-500">Luxurious and creative</p>
        </div>
        <div class="w-6 h-6 bg-purple-600 rounded-full"></div>
      </div>
      <div class="flex space-x-1 mb-4">
        <div class="flex-1 h-12 bg-purple-700 rounded"></div>
        <div class="flex-1 h-12 bg-purple-600 rounded"></div>
        <div class="flex-1 h-12 bg-purple-500 rounded"></div>
        <div class="flex-1 h-12 bg-purple-300 rounded"></div>
        <div class="flex-1 h-12 bg-purple-100 rounded"></div>
      </div>
    </div>
  </div>

  <div>
    <h2 class="text-lg font-semibold text-gray-900 mb-6">Create Custom Palette</h2>
    <div class="bg-white border border-gray-200 rounded-xl p-6">
      <div class="grid grid-cols-5 gap-4 mb-6">
        <% %w[Primary Secondary Accent Neutral Light].each do |label| %>
          <div class="text-center">
            <div class="w-full h-24 bg-gray-100 border-2 border-dashed border-gray-300 rounded-lg flex items-center justify-center cursor-pointer hover:border-gray-400 transition-colors">
              <i class="fa-solid fa-plus text-gray-400 text-xl"></i>
            </div>
            <p class="text-xs text-gray-500 mt-2"><%= label %></p>
          </div>
        <% end %>
      </div>
      <div class="flex justify-end space-x-3">
        <button class="bg-gray-100 hover:bg-gray-200 text-gray-700 px-4 py-2 rounded-lg text-sm font-medium transition-colors">
          Reset
        </button>
        <button class="bg-black hover:bg-gray-800 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors">
          Save Palette
        </button>
      </div>
    </div>
  </div>
</div>
