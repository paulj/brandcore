<%#
  Tags field for multiple-value properties like keywords, markets, traits, tone, audiences
  Each tag is a separate BrandProperty record with status: current
%>

<% current_properties = brand.properties.for_property(property_name).current %>

<div
  id="<%= property_name %>_field"
  data-turbo-action="morph"
  class="space-y-2"
>
  <%# Display current tags %>
  <div class="flex flex-wrap gap-2 mb-2">
    <% current_properties.each do |property| %>
      <%= render "brand/properties/tag_item", property: property, brand: brand %>
    <% end %>
  </div>

  <%# Form to add new tags %>
  <%= form_with(
    model: BrandProperty.new,
    url: brand_properties_path(brand),
    method: :post,
    scope: :brand_property,
    data: {
      controller: "blur-on-submit",
      action: "submit->blur-on-submit#submit turbo:submit-end->blur-on-submit#refocus",
      turbo: true
    },
    class: "flex gap-2"
  ) do |f| %>
    <%= f.hidden_field :property_name, value: property_name %>
    <%= f.text_field :value,
      class: "flex-1 p-3 rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500",
      placeholder: configuration.help_text,
      data: { blur_on_submit_target: "input" } %>
    <%= f.submit "Add",
      class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700" %>
  <% end %>
</div>
