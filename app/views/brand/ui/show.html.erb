<% content_for :title, "UI Elements - #{@brand.name}" %>

<header class="bg-white border-b border-gray-200 px-8 py-6">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-semibold text-gray-900">UI Elements</h1>
      <p class="text-gray-600 mt-1">Define your brand's design system components and patterns</p>
    </div>
    <div class="flex items-center space-x-4">
      <button class="bg-gray-100 hover:bg-gray-200 text-gray-700 px-4 py-2 rounded-lg text-sm font-medium transition-colors">
        <i class="fa-solid fa-download mr-2"></i>
        Export Components
      </button>
      <button class="bg-black hover:bg-gray-800 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors">
        <i class="fa-solid fa-magic-wand-sparkles mr-2"></i>
        AI Generate
      </button>
    </div>
  </div>
</header>

<div class="p-8">
  <div class="bg-gray-50 border border-gray-200 rounded-xl p-6 mb-8">
    <h3 class="text-lg font-semibold text-gray-900 mb-2">UI Design System</h3>
    <p class="text-gray-600 text-sm">Your UI elements ensure consistency and cohesion across all brand touchpoints.</p>
  </div>

  <div class="space-y-8">
    <div class="bg-white border border-gray-200 rounded-xl p-8">
      <h2 class="text-xl font-semibold text-gray-900 mb-6">Buttons</h2>
      <div class="space-y-4">
        <div class="flex items-center space-x-4">
          <button class="bg-black text-white px-6 py-3 rounded-lg font-medium hover:bg-gray-800 transition-colors">
            Primary Button
          </button>
          <button class="bg-gray-100 text-gray-900 px-6 py-3 rounded-lg font-medium hover:bg-gray-200 transition-colors">
            Secondary Button
          </button>
          <button class="border border-gray-300 text-gray-700 px-6 py-3 rounded-lg font-medium hover:bg-gray-50 transition-colors">
            Outline Button
          </button>
        </div>
      </div>
    </div>

    <div class="bg-white border border-gray-200 rounded-xl p-8">
      <h2 class="text-xl font-semibold text-gray-900 mb-6">Form Elements</h2>
      <div class="space-y-4 max-w-md">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Input Field</label>
          <input type="text" placeholder="Enter text..." class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-black focus:border-black outline-none transition-colors">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Select Dropdown</label>
          <select class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-black focus:border-black outline-none transition-colors">
            <option>Choose an option</option>
            <option>Option 1</option>
            <option>Option 2</option>
          </select>
        </div>
      </div>
    </div>

    <div class="bg-white border border-gray-200 rounded-xl p-8">
      <h2 class="text-xl font-semibold text-gray-900 mb-6">Cards</h2>
      <div class="grid grid-cols-3 gap-4">
        <div class="border border-gray-200 rounded-xl p-6 hover:shadow-lg transition-shadow">
          <div class="w-12 h-12 bg-black rounded-lg flex items-center justify-center mb-4">
            <i class="fa-solid fa-star text-white"></i>
          </div>
          <h3 class="font-semibold text-gray-900 mb-2">Card Title</h3>
          <p class="text-gray-600 text-sm">Card description goes here with relevant information.</p>
        </div>
        <div class="border border-gray-200 rounded-xl p-6 hover:shadow-lg transition-shadow">
          <div class="w-12 h-12 bg-black rounded-lg flex items-center justify-center mb-4">
            <i class="fa-solid fa-heart text-white"></i>
          </div>
          <h3 class="font-semibold text-gray-900 mb-2">Card Title</h3>
          <p class="text-gray-600 text-sm">Card description goes here with relevant information.</p>
        </div>
        <div class="border border-gray-200 rounded-xl p-6 hover:shadow-lg transition-shadow">
          <div class="w-12 h-12 bg-black rounded-lg flex items-center justify-center mb-4">
            <i class="fa-solid fa-bolt text-white"></i>
          </div>
          <h3 class="font-semibold text-gray-900 mb-2">Card Title</h3>
          <p class="text-gray-600 text-sm">Card description goes here with relevant information.</p>
        </div>
      </div>
    </div>
  </div>
</div>
