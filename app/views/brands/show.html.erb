<% content_for :title, "Brand Dashboard - #{@brand.name}" %>

<header class="bg-white border-b border-gray-200 px-8 py-6">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-semibold text-gray-900">Brand Dashboard</h1>
      <p class="text-gray-600 mt-1">Build your brand step by step with AI assistance</p>
    </div>
    <div class="flex items-center space-x-4">
      <button class="bg-gray-100 hover:bg-gray-200 text-gray-700 px-4 py-2 rounded-lg text-sm font-medium transition-colors">
        <i class="fa-solid fa-download mr-2"></i>
        Export Brand Book
      </button>
      <button class="bg-black hover:bg-gray-800 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors">
        <i class="fa-solid fa-magic-wand-sparkles mr-2"></i>
        AI Assistant
      </button>
    </div>
  </div>
</header>

<div class="p-8">
  <div class="grid grid-cols-3 gap-6 mb-8">
    <div class="bg-gray-50 border border-gray-200 rounded-xl p-6 hover:shadow-lg transition-shadow cursor-pointer">
      <div class="flex items-center justify-between mb-4">
        <div class="w-12 h-12 bg-black rounded-lg flex items-center justify-center">
          <i class="fa-solid fa-bullseye text-white"></i>
        </div>
        <% if @brand.brand_vision&.completed? %>
          <span class="text-xs bg-green-100 text-green-600 px-2 py-1 rounded-full">Complete</span>
        <% else %>
          <span class="text-xs bg-orange-100 text-orange-600 px-2 py-1 rounded-full">In Progress</span>
        <% end %>
      </div>
      <h3 class="text-lg font-semibold text-gray-900 mb-2">Brand Strategy</h3>
      <p class="text-gray-600 text-sm mb-4">Define your brand's core values, mission, and positioning</p>
      <div class="flex items-center justify-between">
        <span class="text-sm text-gray-500">0% Complete</span>
        <i class="fa-solid fa-arrow-right text-gray-400"></i>
      </div>
    </div>

    <div class="bg-gray-50 border border-gray-200 rounded-xl p-6 hover:shadow-lg transition-shadow cursor-pointer">
      <div class="flex items-center justify-between mb-4">
        <div class="w-12 h-12 bg-black rounded-lg flex items-center justify-center">
          <i class="fa-solid fa-palette text-white"></i>
        </div>
        <% if @brand.brand_logo&.completed? %>
          <span class="text-xs bg-green-100 text-green-600 px-2 py-1 rounded-full">Complete</span>
        <% else %>
          <span class="text-xs bg-gray-100 text-gray-500 px-2 py-1 rounded-full">Not Started</span>
        <% end %>
      </div>
      <h3 class="text-lg font-semibold text-gray-900 mb-2">Visual Identity</h3>
      <p class="text-gray-600 text-sm mb-4">Create your logo, colors, and visual elements</p>
      <div class="flex items-center justify-between">
        <span class="text-sm text-gray-500">0% Complete</span>
        <i class="fa-solid fa-arrow-right text-gray-400"></i>
      </div>
    </div>

    <div class="bg-white border border-gray-200 rounded-xl p-6 hover:shadow-lg transition-shadow cursor-pointer">
      <div class="flex items-center justify-between mb-4">
        <div class="w-12 h-12 bg-gray-200 rounded-lg flex items-center justify-center">
          <i class="fa-solid fa-microphone text-gray-400"></i>
        </div>
        <% if @brand.brand_language&.completed? %>
          <span class="text-xs bg-green-100 text-green-600 px-2 py-1 rounded-full">Complete</span>
        <% else %>
          <span class="text-xs bg-gray-100 text-gray-500 px-2 py-1 rounded-full">Not Started</span>
        <% end %>
      </div>
      <h3 class="text-lg font-semibold text-gray-900 mb-2">Voice & Tone</h3>
      <p class="text-gray-600 text-sm mb-4">Establish your brand's communication style</p>
      <div class="flex items-center justify-between">
        <span class="text-sm text-gray-500">0% Complete</span>
        <i class="fa-solid fa-arrow-right text-gray-400"></i>
      </div>
    </div>
  </div>

  <div class="mb-8">
    <h2 class="text-xl font-semibold text-gray-900 mb-6">Recent Activity</h2>
    <div class="bg-white border border-gray-200 rounded-xl">
      <div class="p-6 border-b border-gray-100">
        <div class="flex items-center space-x-4">
          <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center">
            <i class="fa-solid fa-check text-green-600"></i>
          </div>
          <div class="flex-1">
            <p class="text-gray-900 font-medium">Brand created</p>
            <p class="text-gray-500 text-sm">Your brand "<%= @brand.name %>" is ready for development</p>
          </div>
          <span class="text-gray-400 text-sm"><%= time_ago_in_words(@brand.created_at) %> ago</span>
        </div>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-2 gap-6">
    <div class="bg-white border border-gray-200 rounded-xl p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">Recommended Next Steps</h3>
      <div class="space-y-4">
        <% unless @brand.brand_vision&.completed? %>
          <%= link_to brand_vision_path(@brand), class: "flex items-center space-x-3 p-3 bg-gray-50 rounded-lg cursor-pointer hover:bg-gray-100 transition-colors" do %>
            <div class="w-8 h-8 bg-black rounded-lg flex items-center justify-center">
              <i class="fa-solid fa-bullseye text-white text-sm"></i>
            </div>
            <div class="flex-1">
              <p class="text-sm font-medium text-gray-900">Define your brand vision</p>
              <p class="text-xs text-gray-500">Establish your brand's mission and values</p>
            </div>
            <i class="fa-solid fa-chevron-right text-gray-400 text-sm"></i>
          <% end %>
        <% end %>

        <% unless @brand.brand_logo&.completed? %>
          <%= link_to brand_logo_path(@brand), class: "flex items-center space-x-3 p-3 bg-gray-50 rounded-lg cursor-pointer hover:bg-gray-100 transition-colors" do %>
            <div class="w-8 h-8 bg-black rounded-lg flex items-center justify-center">
              <i class="fa-solid fa-palette text-white text-sm"></i>
            </div>
            <div class="flex-1">
              <p class="text-sm font-medium text-gray-900">Create your logo</p>
              <p class="text-xs text-gray-500">Design your visual brand identity</p>
            </div>
            <i class="fa-solid fa-chevron-right text-gray-400 text-sm"></i>
          <% end %>
        <% end %>

        <% unless @brand.brand_colour_scheme&.completed? %>
          <%= link_to brand_colour_scheme_path(@brand), class: "flex items-center space-x-3 p-3 bg-gray-50 rounded-lg cursor-pointer hover:bg-gray-100 transition-colors" do %>
            <div class="w-8 h-8 bg-gray-200 rounded-lg flex items-center justify-center">
              <i class="fa-solid fa-droplet text-gray-400 text-sm"></i>
            </div>
            <div class="flex-1">
              <p class="text-sm font-medium text-gray-500">Choose colour palette</p>
              <p class="text-xs text-gray-400">Define your brand's colours</p>
            </div>
            <i class="fa-solid fa-lock text-gray-300 text-sm"></i>
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="bg-white border border-gray-200 rounded-xl p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">AI Suggestions</h3>
      <div class="space-y-4">
        <div class="p-4 bg-gradient-to-r from-gray-50 to-gray-100 rounded-lg border border-gray-200">
          <div class="flex items-start space-x-3">
            <div class="w-8 h-8 bg-black rounded-full flex items-center justify-center mt-1">
              <i class="fa-solid fa-magic-wand-sparkles text-white text-sm"></i>
            </div>
            <div class="flex-1">
              <p class="text-sm font-medium text-gray-900 mb-1">Ready to Start</p>
              <p class="text-xs text-gray-600 mb-3">Begin by defining your brand strategy to establish a strong foundation.</p>
              <%= link_to "Get Started", brand_vision_path(@brand), class: "text-xs bg-black text-white px-3 py-1 rounded-lg hover:bg-gray-800 transition-colors inline-block" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

