<% @completion = BrandCompletionPresenter.new(@brand) %>

<div class="mx-auto md:w-full w-full">
  <div class="flex flex-col lg:flex-row gap-8">
    <!-- Sidebar with completion checklist -->
    <aside class="lg:w-64 flex-shrink-0">
      <div class="sticky top-8">
        <div class="bg-gray-50 p-6 rounded-lg">
          <h2 class="font-bold text-lg mb-4">Brand completion</h2>
          <div class="mb-4">
            <div class="w-full bg-gray-200 rounded-full h-2">
              <div class="bg-blue-600 h-2 rounded-full" style="width: <%= @completion.completion_percentage %>%"></div>
            </div>
            <p class="text-sm text-gray-600 mt-2"><%= @completion.completion_percentage %>% complete</p>
          </div>
          
          <ul class="space-y-2">
            <% components = [
              { key: "name", label: "Name", path: "#" },
              { key: "vision", label: "Brand Vision", path: "#" },
              { key: "logo", label: "Logo Uses", path: "#" },
              { key: "language", label: "Brand Language", path: "#" },
              { key: "colours", label: "Colour Palette", path: "#" },
              { key: "typography", label: "Typography", path: "#" },
              { key: "ui", label: "UI Language", path: "#" }
            ] %>
            
            <% components.each do |component| %>
              <% completed = @completion.completed_components.include?(component[:key]) %>
              <li>
                <%= link_to component[:path], class: "flex items-center gap-2 text-sm #{completed ? 'text-green-600' : 'text-gray-600'}" do %>
                  <% if completed %>
                    <span class="text-green-500">✓</span>
                  <% else %>
                    <span class="text-gray-400">☐</span>
                  <% end %>
                  <span><%= component[:label] %></span>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </aside>

    <!-- Main brand book content -->
    <main class="flex-1">
      <div class="mb-8">
        <h1 class="font-bold text-4xl mb-2"><%= @brand.name %></h1>
        <% if @brand.is_working_name? %>
          <span class="inline-block px-2 py-1 text-xs bg-gray-100 text-gray-600 rounded">Working name</span>
        <% end %>
      </div>

      <!-- Component sections in skeleton state -->
      <div class="space-y-12">
        <!-- Name Section -->
        <section class="border-b border-gray-200 pb-8">
          <h2 class="font-bold text-2xl mb-4">Name</h2>
          <% if @brand.brand_name&.completed? %>
            <p class="text-gray-600"><%= @brand.brand_name.name %></p>
          <% else %>
            <div class="bg-gray-50 p-6 rounded-lg border-2 border-dashed border-gray-300">
              <p class="text-gray-500 mb-4">Name not yet completed</p>
              <%= link_to "Edit name", "#", class: "text-blue-600 hover:underline" %>
            </div>
          <% end %>
        </section>

        <!-- Brand Vision Section -->
        <section class="border-b border-gray-200 pb-8">
          <h2 class="font-bold text-2xl mb-4">Brand Vision</h2>
          <% if @brand.brand_vision&.completed? %>
            <div class="prose">
              <% if @brand.brand_vision.mission_statement.present? %>
                <h3 class="font-semibold">Mission</h3>
                <p><%= @brand.brand_vision.mission_statement %></p>
              <% end %>
            </div>
          <% else %>
            <div class="bg-gray-50 p-6 rounded-lg border-2 border-dashed border-gray-300">
              <p class="text-gray-500 mb-4">Brand vision not yet completed</p>
              <%= link_to "Edit vision", "#", class: "text-blue-600 hover:underline" %>
            </div>
          <% end %>
        </section>

        <!-- Logo Section -->
        <section class="border-b border-gray-200 pb-8">
          <h2 class="font-bold text-2xl mb-4">Logo Uses</h2>
          <% if @brand.brand_logo&.completed? %>
            <p class="text-gray-600">Logo guidelines defined</p>
          <% else %>
            <div class="bg-gray-50 p-6 rounded-lg border-2 border-dashed border-gray-300">
              <p class="text-gray-500 mb-4">Logo uses not yet completed</p>
              <%= link_to "Edit logo", "#", class: "text-blue-600 hover:underline" %>
            </div>
          <% end %>
        </section>

        <!-- Language Section -->
        <section class="border-b border-gray-200 pb-8">
          <h2 class="font-bold text-2xl mb-4">Brand Language</h2>
          <% if @brand.brand_language&.completed? %>
            <p class="text-gray-600">Brand language guidelines defined</p>
          <% else %>
            <div class="bg-gray-50 p-6 rounded-lg border-2 border-dashed border-gray-300">
              <p class="text-gray-500 mb-4">Brand language not yet completed</p>
              <%= link_to "Edit language", "#", class: "text-blue-600 hover:underline" %>
            </div>
          <% end %>
        </section>

        <!-- Colour Palette Section -->
        <section class="border-b border-gray-200 pb-8">
          <h2 class="font-bold text-2xl mb-4">Colour Palette</h2>
          <% if @brand.brand_colour_scheme&.completed? %>
            <p class="text-gray-600">Colour palette defined</p>
          <% else %>
            <div class="bg-gray-50 p-6 rounded-lg border-2 border-dashed border-gray-300">
              <p class="text-gray-500 mb-4">Colour palette not yet completed</p>
              <%= link_to "Edit palette", "#", class: "text-blue-600 hover:underline" %>
            </div>
          <% end %>
        </section>

        <!-- Typography Section -->
        <section class="border-b border-gray-200 pb-8">
          <h2 class="font-bold text-2xl mb-4">Typography</h2>
          <% if @brand.brand_typography&.completed? %>
            <p class="text-gray-600">Typography defined</p>
          <% else %>
            <div class="bg-gray-50 p-6 rounded-lg border-2 border-dashed border-gray-300">
              <p class="text-gray-500 mb-4">Typography not yet completed</p>
              <%= link_to "Edit typography", "#", class: "text-blue-600 hover:underline" %>
            </div>
          <% end %>
        </section>

        <!-- UI Language Section -->
        <section class="pb-8">
          <h2 class="font-bold text-2xl mb-4">UI Language</h2>
          <% if @brand.brand_ui&.completed? %>
            <p class="text-gray-600">UI language defined</p>
          <% else %>
            <div class="bg-gray-50 p-6 rounded-lg border-2 border-dashed border-gray-300">
              <p class="text-gray-500 mb-4">UI language not yet completed</p>
              <%= link_to "Edit UI language", "#", class: "text-blue-600 hover:underline" %>
            </div>
          <% end %>
        </section>
      </div>
    </main>
  </div>
</div>

